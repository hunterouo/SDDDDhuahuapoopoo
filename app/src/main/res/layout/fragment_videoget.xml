<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wang.huntergod.videogetFragment"
    android:background="@drawable/loginpage"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    >

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增"
        android:textSize="30dp"
        android:id="@+id/button20"
        style="@style/RDButton"
        android:layout_gravity="right|top" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingTop="80dp"
        android:paddingLeft="35dp"
        >

        <TableRow>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:id="@+id/imageViewA"
                android:src="@drawable/cat_eatgood"


               />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="140dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:singleLine="false"
                    android:text="謝謝大家感謝感謝"
                    android:id="@+id/textView0033"
                    android:layout_below="@+id/imageViewA"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAppearance="?android:attr/textAppearanceLarge"
                         android:text="日期："
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="2016-9-13"
                        android:id="@+id/textView33"
                        android:layout_below="@+id/textView32"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />




                </LinearLayout>




            </LinearLayout>



        </TableRow>





    </TableLayout>


</FrameLayout>
